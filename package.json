{
  "name": "oh-my-live2d",
  "version": "0.0.7",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "types": "./index.d.ts",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./cubism2": {
      "types": "./index.d.ts",
      "import": "./dist/oml-cubism2.es.js",
      "require": "./dist/oml-cubism2.umd.js"
    },
    "./cubism4": {
      "types": "./index.d.ts",
      "import": "./dist/oml-cubism4.es.js",
      "require": "./dist/oml-cubism4.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "rimraf ./dist/* && tsc && node ./scripts/build.js",
    "refresh": "node ./scripts/refresh-cdn.js",
    "release": "dotenv release-it && npm run build",
    "test": "rimraf ./test/dist/* && cc copy ./dist ./test/dist &&  vite preview --outDir ./test/  --port 7777"
  },
  "license": "MIT",
  "keywords": [
    "Live2D",
    "cubism2",
    "cubism4"
  ],
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "axios": "^1.2.2",
    "cli-cat": "^0.0.2",
    "csstype": "^3.1.1",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.30.0",
    "release-it": "^15.5.1",
    "rimraf": "^3.0.2",
    "terser": "^5.16.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.0"
  },
  "dependencies": {
    "pixi-live2d-display": "^0.4.0",
    "pixi.js": "6.5.2"
  }
}
