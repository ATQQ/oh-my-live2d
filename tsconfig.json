{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "outDir": "./dist",
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["packages/oh-my-live2d/src/*"]
    }
  },
  "include": ["**/*", "docs/.vitepress/**/*.ts"],
  "exclude": ["packages/oh-my-live2d/src/library/*"]
}
