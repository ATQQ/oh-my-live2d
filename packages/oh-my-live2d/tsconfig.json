{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "outDir": "./dist",
    "baseUrl": ".",
    "declaration": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["src/library/*"]
}
